# The Analyst - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED - API Keys
# =============================================================================

# Anthropic API key for Claude
ANTHROPIC_API_KEY=sk-ant-...

# HuggingFace token for Arabic model inference (MARBERT)
HUGGINGFACE_TOKEN=hf_...

# =============================================================================
# REQUIRED - Database
# =============================================================================

# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/analyst

# =============================================================================
# OPTIONAL - Configuration
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Cost threshold for API call confirmation (in USD)
COST_ALERT_THRESHOLD=5.0

# Row count threshold requiring confirmation
MAX_ROWS_WITHOUT_CONFIRM=5000

# Default model for orchestrator (Claude Opus 4.5 - latest frontier model)
ORCHESTRATOR_MODEL=claude-opus-4-5-20251101

# Default model for analysis agents (Claude Opus 4.5)
ANALYSIS_MODEL=claude-opus-4-5-20251101

# Default model for utility agents (Claude Opus 4.5)
UTILITY_MODEL=claude-opus-4-5-20251101

# =============================================================================
# OPTIONAL - Notifications
# =============================================================================

# Obsidian vault path for notifications
OBSIDIAN_VAULT_PATH=/path/to/your/vault

# Enable desktop notifications (true/false)
ENABLE_DESKTOP_NOTIFICATIONS=true

# =============================================================================
# OPTIONAL - Data Paths
# =============================================================================

# Base path for data storage (defaults to ./data)
DATA_PATH=./data

# Base path for outputs (defaults to ./data/outputs)
OUTPUT_PATH=./data/outputs
